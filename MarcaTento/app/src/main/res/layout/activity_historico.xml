<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="marcatento.com.marcatento.controller.HistoricoActivity">

    <Button
        android:id="@+id/buttonAnterior"
        style="@style/ButtonStyle"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/txt1"
        android:layout_alignStart="@+id/txt1"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:onClick="anterior"
        android:text="Anterior"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/buttonProximo"
        style="@style/ButtonStyle"
        android:background="@color/black"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:onClick="proximo"
        android:text="Proximo"
        android:textSize="10dp"
        android:layout_alignTop="@+id/buttonPesquisar"
        android:layout_alignRight="@+id/txt1"
        android:layout_alignEnd="@+id/txt1" />

    <Button
        android:id="@+id/buttonPesquisar"
        style="@style/ButtonStyle"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:onClick="pesquisar"
        android:text="Pesquisar"
        android:textSize="10dp"
        android:backgroundTint="@color/darkRed"
        android:layout_alignTop="@+id/buttonAnterior" />

    <Button
        android:id="@+id/buttonVoltar"
        style="@style/ButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:background="@color/black"
        android:onClick="voltar"
        android:text="Voltar"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico de Partidas"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtVencedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/buttonPesquisar"
        android:layout_alignStart="@+id/buttonPesquisar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonVoltar"
        android:layout_alignStart="@+id/buttonVoltar"
        android:layout_centerVertical="true"
        android:text="Vencedor:"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/darkRed"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/txt4"
        android:layout_toEndOf="@+id/txt4"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonVoltar"
        android:layout_alignStart="@+id/buttonVoltar"
        android:layout_below="@+id/txtVencedor"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:text="Pontos - Nós:"
        android:textColor="@color/darkRed"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontos - Eles:"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtNos"
        android:layout_alignLeft="@+id/buttonVoltar"
        android:layout_alignStart="@+id/buttonVoltar" />

    <TextView
        android:id="@+id/txtEles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/txt4"
        android:layout_alignBottom="@+id/txt4"
        android:layout_alignRight="@+id/txtNos"
        android:layout_alignEnd="@+id/txtNos" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonVoltar"
        android:layout_alignStart="@+id/buttonVoltar"
        android:layout_below="@+id/txtNos"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:text="Pontos - Eles:"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDuracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/darkRed"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonVoltar"
        android:layout_alignStart="@+id/buttonVoltar"
        android:layout_below="@+id/txt4"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:text="Duração:"
        android:textColor="@color/darkRed"
        android:textSize="25dp"
        android:textStyle="bold" />

</android.widget.RelativeLayout>
