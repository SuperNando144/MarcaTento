<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="marcatento.com.marcatento">

    <uses-permission android:name="android.permission.VIBRATE" />

    <supports-screens android:requiresSmallestWidthDp="420" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icone"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icone"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.MenuActivity" />
        <activity android:name=".controller.MarcadorActivity" />
        <activity android:name=".controller.HistoricoActivity"></activity>
    </application>

</manifest>